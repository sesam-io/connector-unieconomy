{
  "_id": "{{@ system @}}",
  "oauth2": {
    "access_token": "$SECRET(oauth_access_token)",
    "client_id": "$SECRET(oauth_client_id)",
    "client_secret": "$SECRET(oauth_client_secret)",
    "refresh_token": "$SECRET(oauth_refresh_token)",
    "token_url": "{{@ token_url @}}"
  },
  "operations": {
    "customers-delete": {
      "method": "DELETE",
      "url": "api/biz/customers/{{ entity.ID }}"
    },
    "customers-insert": {
      "method": "POST",
      "payload-type": "json",
      "url": "api/biz/customers/{{ entity.ID }}"
    },
    "customers-list": {
      "id_expression": "{{ ID }}",
      "method": "GET",
      "url": "api/biz/customers"
    },
    "customers-lookup": {
      "method": "GET",
      "url": "api/biz/customers/{{ entity.ID }}"
    },
    "customers-update": {
      "method": "PUT",
      "payload-type": "json",
      "url": "api/biz/customers/{{ entity.ID }}"
    },
    "orders-delete": {
      "method": "DELETE",
      "url": "api/biz/orders/{{ entity.ID }}"
    },
    "orders-insert": {
      "method": "POST",
      "payload-type": "json",
      "url": "api/biz/orders/{{ entity.ID }}"
    },
    "orders-list": {
      "id_expression": "{{ ID }}",
      "method": "GET",
      "url": "api/biz/orders"
    },
    "orders-lookup": {
      "method": "GET",
      "url": "api/biz/orders/{{ entity.ID }}"
    },
    "orders-update": {
      "method": "PUT",
      "payload-type": "json",
      "url": "api/biz/orders/{{ entity.ID }}"
    }
  },
  "type": "system:rest",
  "url_pattern": "https://test.softrig.com/%s",
  "verify_ssl": true
}