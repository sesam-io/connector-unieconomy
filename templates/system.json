{
  "_id": "{{@ system @}}",
  "oauth2": {
    "access_token": "$SECRET(oauth_access_token)",
    "client_id": "$SECRET(oauth_client_id)",
    "client_secret": "$SECRET(oauth_client_secret)",
    "refresh_token": "$SECRET(oauth_refresh_token)",
    "token_url": "{{@ token_url @}}"
  },
  "type": "system:rest",
  "url_pattern": "https://test.softrig.com/%s",
  "verify_ssl": true,
  "operations": {
    "customer-delete": {
      "method": "DELETE",
      "url": "api/biz/customers/{{ entity.ID }}"
    },
    "customer-insert": {
      "method": "POST",
      "payload-type": "json",
      "url": "api/biz/customers/{{ entity.ID }}"
    },
    "customer-list": {
      "id_expression": "{{ id }}",
      "method": "GET",
      "url": "api/biz/customers"
    },
    "customer-lookup": {
      "method": "GET",
      "url": "api/biz/customers/{{ entity.ID }}"
    },
    "customer-update": {
      "method": "PUT",
      "payload-type": "json",
      "url": "api/biz/customers/{{ entity.ID }}"
    }
  }
}